{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "build",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "baseUrl": "./src/",
    "paths": {
      "@app/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "./src/**/*.test.tsx",
    "build",
    "node_modules"
  ]
}